#include "get_next_line.h"

int		get_next_line(const int fd, char **line)
{
	int		ret;
	char	buf[BUFF_SIZE + 1];

	if (line && fd > 0)
	{
		while (!(ft_strchr(buf,'\n'))
			{
				if ((ret = read(fd, buf, BUFF_SIZE)) < 0)
					return (-1);
				if (!(*line = (char *)malloc(sizeof(char) * ft_strlen(buf))))
					return (-1);
				ft_strcpy(*line, buf);
}
